<!DOCTYPE html>
<html>
<head>
  <title>Light501Project</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <style>
    .flash_alert { color: red; }
    .flash_notice { color: blue; }
    .flash_success { color: green; }
  </style>
</head>

<body>
<!-- Header with Navigation -->
<header class="bg-maroon text-white p-3">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <img src="/path/to/your/logo.png" alt="Logo" style="height: 60px;">
      </div>
      <nav>
        <ul class="nav">
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Media', media_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Featured', featured_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'About Us', about_path, class: 'nav-link' %>
          </li>

          <% if member_signed_in? %>
            <li class="nav-item">
              <%= link_to 'My Dashboard', member_dashboard_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Admin Dashboard', events_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Out', destroy_member_session_path, method: :delete, class: 'btn btn-danger' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= button_to member_google_oauth2_omniauth_authorize_path, class: "nav-link", method: :post, data: { turbo: "false" } do %>
                <i class="fab fa-google"></i><span>&nbsp;Login with Google</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>



  <!-- Flash Messages -->
  <div class="container">
    <% if flash.any? %>
      <% flash.each do |key, value| %>
        <section class="flash flash_<%= key %>"><%= value.html_safe %></section>
      <% end %>
    <% end %>
  </div>

  <!-- Main Content Area -->
  <div class="container">
    <%= yield %>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white py-5">
    <div class="container text-center">
      <div class="row">
        <div class="col-md-6">
          <h5>Get in touch</h5>
          <p>
            Email: <a href="mailto:info.boldrso@gmail.com" class="text-white">info.boldrso@gmail.com</a><br>
            LinkedIn: <a href="https://www.linkedin.com/company/boldrso" class="text-white">BOLD on LinkedIn</a>
          </p>
        </div>
        <div class="col-md-6">
          <h5>Message this organization</h5>
          <p><a href="/login" class="text-white">Login to send this organization a message</a></p>
        </div>
      </div>
      <div class="text-muted mt-4">2024 Texas A&M University</div>
    </div>
  </footer>

</body>
</html>
