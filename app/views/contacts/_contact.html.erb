<div id="<%= dom_id contact %>" >
  <div class="form-member-col-container">
        <div class="form-member-col-image">
            <% if contact.pfp.present? %>
                <p class="border rounded border-1 border-dark p-1">
                    <%= image_tag contact.pfp.variant(resize_to_fill: [150, 150]) %>
                </p>
            <% end %>
        </div>

        <div class="form-member-col-content">
            <strong>First Name: </strong>
            <span><%= contact.first_name %></span><br/>

            <strong>Last Name: </strong>
            <span><%= contact.last_name %></span><br/>

            <strong>In Network: </strong>
            <span><%= contact.in_network ? "Yes" : "No" %></span><br/>

            <strong>Bio: </strong><br/>
            <p><%= contact.bio %></p>

            <strong>Organization: </strong>
            <span><%= contact.organization %></span><br/>
            
            <strong>Title: </strong>
            <span><%= contact.title %></span><br/>

            <strong>Industries: </strong>
            <div style="padding-left: 20px;">
                <% contact.industries.each do |industry| %>
                    <li><%= industry.industry_type %></li>
                <% end %>
            </div><br/>

            <strong>Email: </strong>
            <span><%= contact.email %></span><br/>

            <strong>Link: </strong>
            <span><%= contact.link %></span><br/>
        </div>    
    </div>
</div>
