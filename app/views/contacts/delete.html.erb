<%= render "events/header"%>

<h2>Delete Contact From Network</h2>
<br/>

<div class="form-member">
  <div class="form-member-header">
      <%= link_to "< Back To BOLD Network", contacts_path, class:"ml-3 btn btn-secondary" %>
  </div>

    <div class="form-member-col-container">
        <div class="form-member-col-content-main">
            <%= form_for(@contact, method: 'delete') do |f| %>
                <h3 style="color: red;">Are you sure you want to permanently delete this contact?</h3>

                <strong>Contact Name: </strong>
                <span><%= @contact.first_name + ' ' + @contact.last_name %></span><br/><br/><br/>
            
                <div class="form-member-footer" style="margin: -10px;">
                    <div class="d-flex justify-content-end mr-2">
                        <%= f.submit "Delete Contact", class: "btn btn-danger" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
<br/>