<%= render "events/header"%>

<%= render "events/adminheader"%>

<div style='margin-left: 5%'>

<h1><%= @contact.first_name %> <%= @contact.last_name %></h1>

<div class="row">

    <div>
        <p>Organization: <%= @contact.organization %></p>
        <p>Title: <%= @contact.title %></p>
        <p>Email: <%= @contact.email %></p>
        <p>Link: <%= @contact.link %></p>
        <p>Bio: <%= @contact.bio %></p>
        <p>Industries: </p>
        <ul>
        <% @contact.industries.each do |industry| %>
            <li><%= industry.industry_type %></li>
        <% end %>
        </ul>
        
    </div>

    <div>
    
        <p>Profile Picture: </p>
        <div class="border rounded border-1 border-dark p-1 mb-2">
            <% if @contact.pfp.attached? %>
                <%= image_tag @contact.pfp.variant(resize_to_limit: [150, 150]) %>
            <% end %>
        </div>
    
    </div>

</div>

<br>
<button><%= link_to 'Edit', edit_contact_path(@contact) %></button>
<button><%= link_to("Delete", delete_contact_path(@contact)) %></button>
<button><%= link_to 'Back', contacts_path %></button>

</div>