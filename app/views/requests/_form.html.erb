<%= form_with(model: request) do |form| %>
  <% if request.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :request_type, style: "display: block" %>
    <%= form.select :request_type, Request.request_types.keys.map {|request_type| [request_type.humanize, request_type]} %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Request.statuses.keys.map {|status| [status.humanize, status]} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
