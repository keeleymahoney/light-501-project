<%= render "header"%>
<div>
    <h2 class="title-page">Delete RSVP Form</h2>
    <%= link_to("Back to RSVP Form", rsvp_form_event_path(@event), :class => 'back-link ml-2')%>
	<div>
    
        <br/>
        <h3 class="text-danger ml-2">Are you sure you want to permanently delete this RSVP form?</h3>
        <strong><p class="ml-2">RSVP Form's Event Name: </strong><%= @event.name %></p>
    
        <div class="form-buttons ml-2">
            <%= button_to destroy_form_event_path, class: "btn btn-danger", method: :get do %>
				<span>Delete RSVP Form</span>
			<% end %>
        </div>    
      </div>
</div>

