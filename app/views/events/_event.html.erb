<div id="<%= dom_id event %>">
  <div class="border rounded border-1 border-dark p-1" style="width: 95%; margin-left: auto; margin-right: auto;">
  <br/>
    <div class="header row">
      <div class="col">
        <p><strong>Name:</strong></p>
        <p class="border rounded border-1 border-dark p-1">
          <%= event.name %>
          </p>
      </div>

      <div class="col">
        <p><strong>Date:</strong></p>
        <p class="border rounded border-1 border-dark p-1">
          <%= event.date.strftime("%m/%d/%y %I:%M %p")  %>
        </p>
      </div>

      <div class="col">
        <p><strong>Location:</strong></p>
        <p class="border rounded border-1 border-dark p-1">
          <%= event.location %>
          </p>
      </div>

     
      

    </div>

    <br/>
    <div class="header row">
      <div class="col">
        <p><strong>Virtual:</strong></p>    
        <p class="border rounded border-1 border-dark p-1">
          <%= event.virtual ? "Yes" : "No" %>
        </p>
      </div>
      <div class="col">
        <p><strong>Published:</strong></p>    
        <p class="border rounded border-1 border-dark p-1">
          <%= event.published ? "Yes" : "No" %>
        </p>
      </div>
    </div>

    <br/>
    <div class="header row">
      <div class="col">
        <p><strong>Description:</strong></p>
        <p class="border rounded border-1 border-dark p-1">
          <%= event.description %>
        </p>
      </div>
    </div>

    <br/>
    <!-- Display images related to the event -->
    <div class="header row">
      <div class="col">
        <p><strong>Event Images:</strong></p>
        <% if event.images.any? %>
          <div class="row">
            <div class="image-gallery">
              <% event.images.each do |image| %>
                <div class="image-container">
                  <%=  image_tag image.variant(resize_to_fit: [nil, 300]), alt: "Image", class: "event-image" %>
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <p>No images available for this event.</p>
        <% end %>
      </div>
    </div>
    <div class="row justify-content-end mr-4">
      <%= link_to "Edit", edit_event_path(@event), class:"btn btn-primary mr-2" %>
      <%= link_to "Delete", delete_event_path(@event), class:"btn btn-danger" %>
    </div>
    <br/>
  </div>
</div>

