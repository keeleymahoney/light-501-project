<%= render "header"%>
<%= render "adminheader"%>
<br/>
<div>
    <div class="text-center">
        <h2>Delete Event</h2>
    </div>
    <div>
        <%= link_to 'Back to Events', events_path, class:"btn btn-secondary"%>
    </div>
    <%= form_for(@event, method: 'delete') do |f| %>
    
        <br/>
        <h3 class="text-danger ml-2">Are you sure you want to permanently delete this event?</h3>
        <strong><p class="ml-2">Event Name: </strong><%= @event.name%></p>
    
        <div class="d-flex justify-content-end mr-2">
            <%= f.submit "Delete Event", class: "btn btn-danger" %>
        </div>
        <br/>
      <% end %>
</div>

