<%= render "header"%>

<h2>Delete Event</h2>
<br/>

<div class="form-member">
  <div class="form-member-header">
      <%= link_to "< Back To Events", events_path, class:"ml-3 btn btn-secondary" %>
  </div>

    <div class="form-member-col-container">
        <div class="form-member-col-content-main">
            <%= form_for(@event, method: 'delete') do |f| %>
                <h3 style="color: red;">Are you sure you want to permanently delete this event?</h3>
                <span>This will not delete any forms from Google Drive</span><br/><br/>

                <strong>Event Name: </strong>
                <span><%= @event.name%></span><br/><br/><br/>
            
                <div class="form-member-footer" style="margin: -10px;">
                    <div class="d-flex justify-content-end mr-2">
                        <%= f.submit "Delete Event", class: "btn btn-danger" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
<br/>
