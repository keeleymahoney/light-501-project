<!-- Featured Content Section -->
<section class="py-5">
  <div class="container text-center">
    <h2 class="display-4">Featured Content</h2>
    <p class="lead">This page will showcase the featured content or highlights of the BOLD organization.</p>

    <!-- Photo Gallery Section -->
    <div id="gallery" class="row">
      <% 6.times do |i| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <img src="/path/to/placeholder.jpg" class="img-fluid" alt="Featured Image <%= i + 1 %>">
        </div>
      <% end %>
    </div>

    <p class="mt-4 text-muted">No featured content available right now.</p>
  </div>
</section>

