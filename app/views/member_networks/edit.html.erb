<%= render "header"%>

<h2>Editing My Network Information</h2>
<br/>

<div class="form-member">
    <div class="form-member-header">
        <%= link_to "< Back To My Network Information", member_networks_path, class:"ml-3 btn btn-secondary" %>
        <% if @contact.in_network %>
            <strong class="in-network">In Network</strong>
        <% else %>
            <strong class="in-network">Not In Network</strong>
        <% end %>
    </div>

    <div class="form-member-col-container">
        <div class="form-member-col-content-main">
            <%= form_for @contact do |form| %>
                <strong><%= form.label :first_name, style: "display: block" %></strong>
                <span><%= form.text_field :first_name, class: "full-width"%></span><br/>

                <strong><%= form.label :last_name, style: "display: block" %></strong>
                <span><%= form.text_field :last_name, class: "full-width"%></span><br/>

                <strong><%= form.label :title, style: "display: block" %></strong>
                <span><%= form.text_field :title, class: "full-width"%></span><br/>

                <strong><%= form.label :organization, style: "display: block" %></strong>
                <span><%= form.text_field :organization, class: "full-width"%></span><br/>

                <strong><%= form.label :link, style: "display: block" %></strong>
                <span><%= form.text_field :link, class: "full-width"%></span><br/>

                <strong><%= form.label :email, style: "display: block" %></strong>
                <span><%= form.text_field :email, class: "full-width"%></span><br/>

                <strong><%= form.label :bio, style: "display: block"%></strong>
                <span><%= form.text_area :bio, style:"width: 100%" %></span><br/><br/><br/>

                <div>
                    <strong><p>Profile Picture: </p></strong>
                    <% if @contact.pfp.present? %>
                    <div class="border rounded border-1 border-dark p-1 mb-2">
                        <%= image_tag @contact.pfp.variant(resize_to_fill: [150, 150]) %>
                    </div>
                    <% end %>
                    <strong><%= form.label :pfp %></strong>
                    <span><%= form.file_field :pfp, class: 'form-control' %><span><br/>
                </div>
                
                <div class="form-member-footer" style="margin: -10px;">
                    <div class="d-flex justify-content-end mr-2">
                        <%= form.submit "Submit Network Updates to Admin", class: "btn btn-primary"%>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
<br/>
